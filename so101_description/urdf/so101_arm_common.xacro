<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

  <xacro:macro name="so101_arm_common"
               params="mesh_dir:='package://so101_description/meshes' add_transmissions:='false'">

    <!-- base_link -->
    <link name="base_link">
      <xacro:inertial_block
        xyz="0.0137179 -5.19711e-05 0.0334843" rpy="0 0 0"
        mass="0.147"
        ixx="0.000114686" ixy="-4.59787e-07" ixz="4.97151e-06"
        iyy="0.000136117" iyz="9.75275e-08" izz="0.000130364"/>

      <xacro:mesh_vc filename="${mesh_dir}/base_motor_holder_so101_v1.stl"
        xyz="-0.00636471 -9.94414e-05 -0.0024" rpy="1.5708 -1.67685e-15 1.5708" material="3d_printed"/>
      <xacro:mesh_vc filename="${mesh_dir}/base_so101_v2.stl"
        xyz="-0.00636471 -8.97657e-09 -0.0024" rpy="1.5708 -2.78073e-29 1.5708" material="3d_printed"/>
      <xacro:mesh_vc filename="${mesh_dir}/sts3215_03a_v1.stl"
        xyz="0.0263353 -8.97657e-09 0.0437" rpy="-8.21148e-16 7.84513e-18 1.249e-15" material="sts3215"/>
      <xacro:mesh_vc filename="${mesh_dir}/waveshare_mounting_plate_so101_v2.stl"
        xyz="-0.0309827 -0.000199441 0.0474" rpy="1.5708 -1.35493e-14 1.5708" material="3d_printed"/>
    </link>

    <!-- shoulder_link -->
    <link name="shoulder_link">
      <xacro:inertial_block
        xyz="-0.0307604 -1.66727e-05 -0.0252713" rpy="0 0 0"
        mass="0.100006"
        ixx="8.3759e-05" ixy="7.55525e-08" ixz="-1.16342e-06"
        iyy="8.10403e-05" iyz="1.54663e-07" izz="2.39783e-05"/>

      <xacro:mesh_vc filename="${mesh_dir}/sts3215_03a_v1.stl"
        xyz="-0.0303992 0.000422241 -0.0417" rpy="1.5708 1.5708 0" material="sts3215"/>
      <xacro:mesh_vc filename="${mesh_dir}/motor_holder_so101_base_v1.stl"
        xyz="-0.0675992 -0.000177759 0.0158499" rpy="1.5708 -1.5708 0" material="3d_printed"/>
      <xacro:mesh_vc filename="${mesh_dir}/rotation_pitch_so101_v1.stl"
        xyz="0.0122008 2.22413e-05 0.0464" rpy="-1.5708 2.35221e-33 0" material="3d_printed"/>
    </link>

    <!-- upper_arm_link -->
    <link name="upper_arm_link">
      <xacro:inertial_block
        xyz="-0.0898471 -0.00838224 0.0184089" rpy="0 0 0"
        mass="0.103"
        ixx="4.08002e-05" ixy="-1.97819e-05" ixz="-4.03016e-08"
        iyy="0.000147318" iyz="8.97326e-09" izz="0.000142487"/>

      <xacro:mesh_vc filename="${mesh_dir}/sts3215_03a_v1.stl"
        xyz="-0.11257 -0.0155 0.0187" rpy="-3.14159 -5.27356e-16 -1.5708" material="sts3215"/>
      <xacro:mesh_vc filename="${mesh_dir}/upper_arm_so101_v1.stl"
        xyz="-0.065085 0.012 0.0182" rpy="3.14159 -0 -1.30911e-30" material="3d_printed"/>
    </link>

    <!-- lower_arm_link -->
    <link name="lower_arm_link">
      <xacro:inertial_block
        xyz="-0.0980701 0.00324376 0.0182831" rpy="0 0 0"
        mass="0.104"
        ixx="2.87438e-05" ixy="7.41152e-06" ixz="1.26409e-06"
        iyy="0.000159844" iyz="-4.90188e-08" izz="0.00014529"/>

      <xacro:mesh_vc filename="${mesh_dir}/under_arm_so101_v1.stl"
        xyz="-0.0648499 -0.032 0.0182" rpy="3.14159 -0 6.67202e-31" material="3d_printed"/>
      <xacro:mesh_vc filename="${mesh_dir}/motor_holder_so101_wrist_v1.stl"
        xyz="-0.0648499 -0.032 0.018" rpy="-3.14159 -2.55351e-15 -1.83387e-30" material="3d_printed"/>
      <xacro:mesh_vc filename="${mesh_dir}/sts3215_03a_v1.stl"
        xyz="-0.1224 0.0052 0.0187" rpy="-3.14159 -7.88861e-31 -3.14159" material="sts3215"/>
    </link>

    <!-- wrist_link -->
    <link name="wrist_link">
      <xacro:inertial_block
        xyz="-0.000103312 -0.0386143 0.0281156" rpy="0 0 0"
        mass="0.079"
        ixx="3.68263e-05" ixy="1.7893e-08" ixz="-5.28128e-08"
        iyy="2.5391e-05" iyz="3.6412e-06" izz="2.1e-05"/>

      <xacro:mesh_vc filename="${mesh_dir}/sts3215_03a_no_horn_v1.stl"
        xyz="8.32667e-17 -0.0424 0.0306" rpy="1.5708 1.5708 0" material="sts3215"/>
      <xacro:mesh_vc filename="${mesh_dir}/wrist_roll_pitch_so101_v2.stl"
        xyz="0 -0.028 0.0181" rpy="-1.5708 -1.5708 0" material="3d_printed"/>
    </link>

    <!-- joints base->wrist -->
    <joint name="shoulder_pan" type="revolute">
      <origin xyz="0.0388353 -8.97657e-09 0.0624" rpy="3.14159 4.18253e-17 -3.14159"/>
      <parent link="base_link"/>
      <child link="shoulder_link"/>
      <axis xyz="0 0 1"/>
      <limit effort="10" velocity="10" lower="-1.91986" upper="1.91986"/>
    </joint>

    <joint name="shoulder_lift" type="revolute">
      <origin xyz="-0.0303992 -0.0182778 -0.0542" rpy="-1.5708 -1.5708 0"/>
      <parent link="shoulder_link"/>
      <child link="upper_arm_link"/>
      <axis xyz="0 0 1"/>
      <limit effort="10" velocity="10" lower="-1.74533" upper="1.74533"/>
    </joint>

    <joint name="elbow_flex" type="revolute">
      <origin xyz="-0.11257 -0.028 1.73763e-16" rpy="-3.63608e-16 8.74301e-16 1.5708"/>
      <parent link="upper_arm_link"/>
      <child link="lower_arm_link"/>
      <axis xyz="0 0 1"/>
      <limit effort="10" velocity="10" lower="-1.69" upper="1.69"/>
    </joint>

    <joint name="wrist_flex" type="revolute">
      <origin xyz="-0.1349 0.0052 3.62355e-17" rpy="4.02456e-15 8.67362e-16 -1.5708"/>
      <parent link="lower_arm_link"/>
      <child link="wrist_link"/>
      <axis xyz="0 0 1"/>
      <limit effort="10" velocity="10" lower="-1.65806" upper="1.65806"/>
    </joint>

    <!-- OPTIONAL transmissions motor1..motor4 -->
    <xacro:if value="${add_transmissions}">
      <xacro:simple_transmission name="shoulder_pan_trans"  joint="shoulder_pan"  actuator="motor1"/>
      <xacro:simple_transmission name="shoulder_lift_trans" joint="shoulder_lift" actuator="motor2"/>
      <xacro:simple_transmission name="elbow_flex_trans"    joint="elbow_flex"    actuator="motor3"/>
      <xacro:simple_transmission name="wrist_flex_trans"    joint="wrist_flex"    actuator="motor4"/>
    </xacro:if>

  </xacro:macro>

</robot>
